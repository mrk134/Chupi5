<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/orga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Organisation Foot"
        android:textSize="20dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/nombrejoueurs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre de joueurs"
        android:textColor="@color/colorPrimaryDark"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
        app:layout_constraintBottom_toTopOf="@+id/num"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:gravity="center_horizontal"
        android:textSize="50dp"
        android:text="0"
        android:background="@color/colorAccent"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <ImageButton
        android:id="@+id/player1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/button_profile_default_image"
        android:background="@drawable/button_profile_default"
        android:layout_marginTop="100dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="100dp" />

    <ImageView
        android:id="@+id/player1_overwrite"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/button_profile_default_overwrite"
        android:layout_marginTop="100dp"
        android:adjustViewBounds="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="100dp"
        />

    <ImageButton
        android:id="@+id/player2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/button_profile_default_image"
        android:background="@drawable/button_profile_default"
        android:layout_marginTop="100dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="100dp" />

    <ImageView
        android:id="@+id/player2_overwrite"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/button_profile_default_overwrite"
        android:layout_marginTop="100dp"
        android:adjustViewBounds="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="100dp" />

    <ImageButton
        android:id="@+id/player3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/button_profile_default_image"
        android:background="@drawable/button_profile_default"
        android:layout_marginTop="10dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player1"
        android:layout_marginLeft="100dp" />

    <ImageView
        android:id="@+id/player3_overwrite"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/button_profile_default_overwrite"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player1"
        android:layout_marginLeft="100dp" />

    <ImageButton
        android:id="@+id/player4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/button_profile_default_image"
        android:background="@drawable/button_profile_default"
        android:layout_marginTop="10dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player2"
        android:layout_marginRight="100dp" />

    <ImageView
        android:id="@+id/player4_overwrite"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/button_profile_default_overwrite"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player2"
        android:layout_marginRight="100dp" />

    <ImageButton
        android:id="@+id/player5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/button_profile_default_image"
        android:background="@drawable/button_profile_default"
        android:layout_marginTop="10dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player3"
        android:layout_marginLeft="100dp" />

    <ImageView
        android:id="@+id/player5_overwrite"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/button_profile_default_overwrite"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player3"
        android:layout_marginLeft="100dp" />

    <ImageButton
        android:id="@+id/player6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/button_profile_default_image"
        android:background="@drawable/button_profile_default"
        android:layout_marginTop="10dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player4"
        android:layout_marginRight="100dp" />

    <ImageView
        android:id="@+id/player6_overwrite"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/button_profile_default_overwrite"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player4"
        android:layout_marginRight="100dp" />

    <ImageButton
        android:id="@+id/button_add_user"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/button_user_add"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:background="@drawable/button_add_user_custom"
        app:layout_constraintBottom_toTopOf="@+id/num"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        />

    <ImageButton
        android:id="@+id/button_delete_user"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/button_user_delete"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:background="@drawable/button_delete_user_custom"
        app:layout_constraintBottom_toTopOf="@+id/num"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        />

</android.support.constraint.ConstraintLayout>